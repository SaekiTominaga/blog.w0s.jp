{
	"name": "blog.w0s.jp",
	"type": "module",
	"scripts": {
		"app": "nodemon --inspect node/dist/app.js",
		"html-lint": "markuplint errorpage/*.html views/*.ejs views/_include/*.ejs",
		"css-build-watch": "run-p _css-build-watch:*",
		"css-build-all": "run-s _css-build-all:*",
		"css-lint": "stylelint public/style/_src/**/*.css",
		"js-build": "run-p _js-build:*",
		"js-lint": "eslint public/script/_src/**/*.ts",
		"svg-build": "run-p _svg-build:*",
		"node-build-watch": "tsc --project node/tsconfig.json -w",
		"node-build-all": "tsc --project node/tsconfig.json",
		"node-lint": "eslint node/src/**/*.ts node/@types/*.d.ts",
		"node-test": "npm run node-build-all && cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
		"node-config-convert": "json2ts -i node/configure/schema -o node/configure/type",
		"node-config-validate": "run-p _node-config-validate:*",
		"_css-build-watch:build": "postcss public/style/_src/*.css --base public/style/_src -d public/style/_temp -w",
		"_css-build-watch:format": "onchange -f add -f change -v public/style/_temp/*.css -- node node/dist/build.js Css {{file}} public/style",
		"_css-build-watch:compress": "onchange -f add -f change -v public/style/*.css -- brotlin compress {{file}} -m 1",
		"_css-build-all:build": "postcss public/style/_src/*.css --base public/style/_src -d public/style",
		"_css-build-all:format": "node node/dist/build.js Css public/style/*.css",
		"_css-build-all:compress": "brotlin compress public/style/*.css -m 1",
		"_js-build:watch": "rollup -c -w",
		"_js-build:compress": "onchange -f add -f change -v public/script/*.js public/script/*.mjs -- brotlin compress {{file}} -m 1",
		"_svg-build:watch": "onchange -f add -f change -v image/**/*.svg -- svgo -i {{file}} -o public/{{file}} --config=svgo.config.cjs",
		"_svg-build:compress": "onchange -f add -f change -v public/image/**/*.svg -- brotlin compress {{file}} -m 1",
		"_node-config-validate:amazon": "ajv --spec=draft7 -s node/configure/schema/amazon.json -d node/configure/amazon.json",
		"_node-config-validate:build": "ajv --spec=draft7 -s node/configure/schema/build.json -d node/configure/build.json",
		"_node-config-validate:category": "ajv --spec=draft7 -s node/configure/schema/category.json -d node/configure/category.json",
		"_node-config-validate:common": "ajv --spec=draft7 -s node/configure/schema/common.json -d node/configure/common.json",
		"_node-config-validate:entry": "ajv --spec=draft7 -s node/configure/schema/entry.json -d node/configure/entry.json",
		"_node-config-validate:list": "ajv --spec=draft7 -s node/configure/schema/list.json -d node/configure/list.json",
		"_node-config-validate:message": "ajv --spec=draft7 -s node/configure/schema/message.json -d node/configure/message.json",
		"_node-config-validate:paapi": "ajv --spec=draft7 -s node/configure/schema/paapi.json -d node/configure/paapi.json",
		"_node-config-validate:post": "ajv --spec=draft7 -s node/configure/schema/post.json -d node/configure/post.json",
		"_node-config-validate:twitter": "ajv --spec=draft7 -s node/configure/schema/twitter.json -d node/configure/twitter.json"
	},
	"dependencies": {
		"@log4js-node/smtp": "^2.0.8",
		"@saekitominaga/isbn-verify": "^2.0.1",
		"@saekitominaga/paapi-item-image-url-parser": "^2.2.2",
		"@saekitominaga/string-escape-html": "^2.0.1",
		"amazon-paapi": "^1.0.7",
		"basic-auth": "^2.0.1",
		"compression": "^1.7.4",
		"dayjs": "^1.11.6",
		"ejs": "^3.1.8",
		"express": "^4.18.2",
		"express-validator": "^6.14.2",
		"file-type": "^18.0.0",
		"filenamify": "^5.1.1",
		"github-slugger": "^2.0.0",
		"globby": "^13.1.3",
		"highlight.js": "^11.6.0",
		"htpasswd-js": "^1.0.2",
		"jsdom": "^20.0.1",
		"kill-port": "^2.0.1",
		"log4js": "^6.7.0",
		"md5": "^2.3.0",
		"multer": "^1.4.4",
		"paapi5-typescript-sdk": "^0.2.0",
		"prettier": "^2.8.7",
		"slash": "^5.0.0",
		"sqlite": "^4.1.2",
		"sqlite3": "^5.1.5",
		"twitter-api-v2": "^1.12.9",
		"twitter-text": "^3.1.0",
		"w3c-xmlserializer": "^3.0.0",
		"xml-formatter": "^2.6.1"
	},
	"devDependencies": {
		"@csstools/postcss-global-data": "^1.0.3",
		"@markuplint/ejs-parser": "^3.5.0",
		"@rollup/plugin-commonjs": "^23.0.2",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"@rollup/plugin-terser": "^0.1.0",
		"@rollup/plugin-typescript": "^9.0.2",
		"@types/basic-auth": "^1.1.3",
		"@types/compression": "^1.7.2",
		"@types/ejs": "^3.1.1",
		"@types/express": "^4.17.14",
		"@types/jsdom": "^20.0.0",
		"@types/md5": "^2.3.2",
		"@types/multer": "^1.4.7",
		"@types/node": "^18.11.7",
		"@types/trusted-types": "^2.0.2",
		"@types/twitter-text": "^3.1.4",
		"@types/w3c-xmlserializer": "^2.0.2",
		"@w0s/eslint-config": "^1.0.9",
		"@w0s/markuplint-config": "^2.2.0",
		"@w0s/stylelint-config": "^1.0.2",
		"@w0s/tsconfig": "^1.0.1",
		"ajv-cli": "^5.0.0",
		"brotlin": "^1.1.0",
		"cross-env": "^7.0.3",
		"cssnano": "^6.0.0",
		"cssnano-preset-lite": "^3.0.0",
		"eslint": "^8.29.0",
		"jest": "^29.3.1",
		"json-schema-to-typescript": "^11.0.2",
		"markuplint": "^3.5.0",
		"move-file-cli": "^3.0.0",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"postcss": "^8.4.21",
		"postcss-cli": "^10.1.0",
		"postcss-custom-media": "^9.1.2",
		"postcss-import": "^15.1.0",
		"postcss-media-minmax": "^5.0.0",
		"postcss-nesting": "^11.2.2",
		"rollup": "^3.2.3",
		"stylelint": "^14.16.0",
		"stylelint-order": "^5.0.0",
		"svgo": "^3.0.0",
		"typescript": "^4.8.4"
	}
}
