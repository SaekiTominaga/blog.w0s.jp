{
	"root": true,
	"env": {
		"es2022": true
	},
	"extends": ["@w0s/eslint-config"],
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"ignorePatterns": ["node/dist/**/*.js", "public/script/*.js", "public/script/*.mjs"],
	"overrides": [
		{
			"files": ["node/src/*Interface.ts"],
			"rules": {
				"semi": "off"
			}
		},
		{
			"files": ["node/src/shell/*.ts"],
			"rules": {
				"no-console": "off"
			}
		},
		{
			"files": ["node/src/util/MessageParser.ts"],
			"rules": {
				"camelcase": "off",
				"lines-between-class-members": "off",
				"no-await-in-loop": "off",
				"no-continue": "off"
			}
		},
		{
			"files": ["public/script/_src/analytics.ts"],
			"rules": {
				"no-multi-assign": "off",
				"no-underscore-dangle": "off",
				"no-var": "off"
			}
		}
	]
}
