{
	"name": "@blog.w0s.jp/frontend",
	"private": true,
	"type": "module",
	"scripts": {
		"node-build-watch": "tsc --project node/tsconfig.json -w",
		"node-build-all": "tsc --project node/tsconfig.json",
		"node-lint": "eslint node/src/**/*.ts",
		"config-convert": "json2ts -i configure/schema -o configure/type",
		"config-validate": "run-p _config-validate:*",
		"css-build-watch": "run-p _css-build-watch:*",
		"css-build-all": "run-s _css-build-all:*",
		"css-lint": "stylelint style/**/*.css",
		"js-build-watch": "run-p _js-build-watch:*",
		"js-build-all": "run-s _js-build-all:*",
		"js-lint": "eslint script/**/*.ts",
		"svg-build-watch": "run-p _svg-build-watch:*",
		"_config-validate:build": "ajv --spec=draft7 -s configure/schema/build.json -d configure/build.json",
		"_css-build-watch:build": "postcss style/*.css --base style -d style/_temp -w",
		"_css-build-watch:format": "onchange -f add -f change -v style/_temp/*.css -- node node/dist/build.js Css {{file}} public/style",
		"_css-build-watch:compress": "onchange -f add -f change -v public/style/*.css -- brotlin compress {{file}} -m 1",
		"_css-build-all:build": "postcss style/*.css --base style -d public/style",
		"_css-build-all:format": "node node/dist/build.js Css public/style/*.css",
		"_css-build-all:compress": "brotlin compress public/style/*.css -m 1",
		"_js-build-watch:build": "rollup -c -w",
		"_js-build-watch:compress": "onchange -f add -f change -v public/script/*.{js,mjs} -- brotlin compress {{file}} -m 1",
		"_js-build-all:build": "rollup -c",
		"_js-build-all:compress": "brotlin compress public/script/*.{js,mjs} -m 1",
		"_svg-build-watch:watch": "onchange -f add -f change -v image/**/*.svg -- node node/dist/build.js Svg {{file}} svgo.config.cjs",
		"_svg-build-watch:compress": "onchange -f add -f change -v public/image/**/*.svg -v public/favicon.ico -- brotlin compress {{file}} -m 1"
	},
	"dependencies": {
		"@blog.w0s.jp/util": "*",
		"@saekitominaga/customelements-button-clipboard": "^1.1.4",
		"@saekitominaga/customelements-button-confirm": "^1.1.4",
		"@saekitominaga/customelements-button-share": "^1.2.2",
		"@saekitominaga/customelements-input-file-preview": "^1.1.4",
		"@saekitominaga/customelements-portal": "^2.4.1",
		"@saekitominaga/customelements-tab": "^1.6.6",
		"@saekitominaga/customelements-tooltip-trigger": "^2.1.2",
		"@saekitominaga/htmlformelement-before-unload-confirm": "^1.2.4",
		"@saekitominaga/htmlformelement-submit-overlay": "^2.1.0",
		"@saekitominaga/paapi-item-image-url-parser": "^2.2.4",
		"@saekitominaga/report-js-error": "^1.2.3",
		"@saekitominaga/report-same-referrer": "^1.2.1",
		"@saekitominaga/string-convert": "^1.0.4",
		"globby": "^13.1.4",
		"prettier": "^2.8.8",
		"slash": "^5.1.0",
		"svgo": "^3.0.2"
	},
	"devDependencies": {
		"@types/trusted-types": "^2.0.3",
		"vfile-message": "^4.0.1"
	}
}
