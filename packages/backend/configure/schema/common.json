{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://blog.w0s.jp/common.json",
	"type": "object",
	"title": "富永日記帳",
	"required": [
		"port",
		"request",
		"response",
		"static",
		"views",
		"temp",
		"errorpage",
		"logger",
		"mail",
		"sqlite",
		"prettier",
		"markuplint",
		"sidebar"
	],
	"properties": {
		"port": {
			"type": "integer",
			"minimum": 1,
			"maximum": 65535,
			"title": "HTTP サーバーのポート番号"
		},
		"request": {
			"type": "object",
			"title": "リクエスト",
			"required": ["urlencoded"],
			"properties": {
				"urlencoded": {
					"type": "object",
					"title": "urlencoded",
					"required": ["limit"],
					"properties": {
						"limit": {
							"type": "string",
							"title": "リクエストの最大本文サイズ"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"response": {
			"type": "object",
			"title": "レスポンス",
			"required": ["header", "compression"],
			"properties": {
				"header": {
					"type": "object",
					"title": "レスポンスヘッダー",
					"required": ["hsts", "csp", "csp_html", "cspro_html"],
					"properties": {
						"hsts": {
							"type": "string",
							"title": "Strict-Transport-Security"
						},
						"csp": {
							"type": "string",
							"title": "Content-Security-Policy (HTML 以外)"
						},
						"csp_html": {
							"type": "string",
							"title": "Content-Security-Policy (HTML)"
						},
						"cspro_html": {
							"type": "string",
							"title": "Content-Security-Policy-Report-Only (HTML)"
						}
					},
					"additionalProperties": false
				},
				"compression": {
					"type": "object",
					"title": "圧縮",
					"required": ["threshold"],
					"properties": {
						"threshold": {
							"type": "string",
							"title": "Threshold"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"static": {
			"type": "object",
			"title": "静的ファイル",
			"required": ["root", "headers"],
			"properties": {
				"root": {
					"type": "string",
					"title": "ルートディレクトリ"
				},
				"extensions": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"title": "ファイル拡張子のフォールバック（拡張子に . は付けない）"
				},
				"indexes": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"title": "ディレクトリのインデックスファイル名"
				},
				"headers": {
					"type": "object",
					"title": "レスポンスヘッダー関連",
					"required": ["mime"],
					"properties": {
						"mime": {
							"type": "object",
							"required": ["path", "extension"],
							"title": "MIME 定義",
							"properties": {
								"path": {
									"type": "object",
									"title": "MIME とファイルパスの紐付け",
									"additionalProperties": {
										"type": "array",
										"items": {
											"type": "string"
										},
										"title": "ファイルパス"
									}
								},
								"extension": {
									"type": "object",
									"title": "MIME と拡張子の紐付け",
									"additionalProperties": {
										"type": "array",
										"items": {
											"type": "string"
										},
										"title": "拡張子（ドットなし）"
									}
								}
							},
							"additionalProperties": false
						},
						"cache_control": {
							"type": "object",
							"required": ["development", "production"],
							"title": "環境",
							"properties": {
								"development": {
									"type": "object",
									"title": "キャッシュ定義（開発環境）",
									"$ref": "#/properties/static/definitions/cache_control"
								},
								"production": {
									"type": "object",
									"title": "キャッシュ定義（本番環境）",
									"$ref": "#/properties/static/definitions/cache_control"
								}
							},
							"additionalProperties": false
						},
						"cors": {
							"type": "object",
							"title": "CORS",
							"required": ["directory", "origin"],
							"properties": {
								"directory": {
									"type": "array",
									"items": {
										"type": "string"
									},
									"title": "CORS を設定する対象ディレクトリ"
								},
								"origin": {
									"type": "array",
									"items": {
										"type": "string"
									},
									"title": "許可するオリジン"
								}
							},
							"additionalProperties": false
						},
						"source_map": {
							"type": "object",
							"title": "SourceMap 定義",
							"properties": {
								"extensions": {
									"type": "array",
									"items": {
										"type": "string"
									},
									"title": "拡張子"
								}
							},
							"additionalProperties": false
						}
					},
					"additionalProperties": false
				},
				"auth_basic": {
					"type": "array",
					"items": {
						"type": "object",
						"required": ["directory", "realm", "htpasswd"],
						"properties": {
							"directory": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"title": "directory"
							},
							"realm": {
								"type": "string",
								"title": "保護領域の説明文"
							},
							"htpasswd": {
								"type": "string",
								"title": "htpasswd ファイルのパス"
							}
						},
						"additionalProperties": false
					},
					"uniqueItems": true,
					"title": "Basic Authentication"
				}
			},
			"additionalProperties": false,
			"definitions": {
				"cache_control": {
					"type": "object",
					"required": ["default"],
					"title": "キャッシュ定義",
					"properties": {
						"default": {
							"type": "string",
							"title": "デフォルト値"
						},
						"path": {
							"type": "array",
							"items": {
								"type": "object",
								"required": ["paths", "value"],
								"properties": {
									"paths": {
										"type": "array",
										"items": {
											"type": "string"
										},
										"title": "拡張子"
									},
									"value": {
										"type": "string",
										"title": "値"
									}
								},
								"additionalProperties": false
							},
							"title": "ファイルパスによるキャッシュ定義"
						},
						"extension": {
							"type": "array",
							"items": {
								"type": "object",
								"required": ["extensions", "value"],
								"properties": {
									"extensions": {
										"type": "array",
										"items": {
											"type": "string"
										},
										"title": "拡張子"
									},
									"value": {
										"type": "string",
										"title": "値"
									}
								},
								"additionalProperties": false
							},
							"title": "拡張子によるキャッシュ定義"
						}
					}
				}
			}
		},
		"views": {
			"type": "string",
			"title": "テンプレートディレクトリ"
		},
		"temp": {
			"type": "string",
			"title": "一時ディレクトリ"
		},
		"errorpage": {
			"type": "object",
			"title": "エラーページ",
			"required": ["path_401", "path_403", "path_404", "path_500"],
			"properties": {
				"path_401": {
					"type": "string",
					"title": "Filepath for `401 Unauthorized`"
				},
				"path_403": {
					"type": "string",
					"title": "Filepath for `403 Forbidden`"
				},
				"path_404": {
					"type": "string",
					"title": "Filepath for `404 Not Found`"
				},
				"path_500": {
					"type": "string",
					"title": "Filepath for `500 Internal Server Error`"
				}
			},
			"additionalProperties": false
		},
		"logger": {
			"type": "object",
			"title": "Logger",
			"required": ["path"],
			"properties": {
				"path": {
					"type": "string",
					"title": "ファイルパス"
				}
			},
			"additionalProperties": false
		},
		"mail": {
			"type": "object",
			"title": "管理者への通知に使用する E-mail の各種情報",
			"required": ["smtp", "user", "password", "port", "from", "to"],
			"properties": {
				"smtp": {
					"type": "string"
				},
				"user": {
					"type": "string"
				},
				"password": {
					"type": "string"
				},
				"port": {
					"type": "integer",
					"minimum": 0
				},
				"from": {
					"type": "string"
				},
				"to": {
					"type": "string"
				}
			},
			"additionalProperties": false
		},
		"sqlite": {
			"type": "object",
			"title": "SQLite",
			"required": ["db"],
			"properties": {
				"db": {
					"type": "object",
					"title": "DB ファイルのパス（絶対パス、または `node` ディレクトリを基準にした相対パス）",
					"required": ["blog"],
					"properties": {
						"blog": {
							"type": "string",
							"title": "blog テーブル"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"prettier": {
			"type": "object",
			"title": "Prettier",
			"required": ["config"],
			"properties": {
				"config": {
					"type": "string",
					"title": "構成ファイルパス"
				}
			},
			"additionalProperties": false
		},
		"markuplint": {
			"type": "object",
			"title": "Markuplint",
			"required": ["mail_title"],
			"properties": {
				"mail_title": {
					"type": "string",
					"title": "lint 違反があった際の通知メールタイトル"
				}
			},
			"additionalProperties": false
		},
		"sidebar": {
			"type": "object",
			"title": "サイドバー",
			"required": ["newly"],
			"properties": {
				"newly": {
					"type": "object",
					"title": "新着記事",
					"required": ["maximum_number"],
					"properties": {
						"maximum_number": {
							"type": "integer",
							"minimum": 1,
							"title": "最大表示件数"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
