{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://blog.w0s.jp/feed.json",
	"type": "object",
	"title": "フィード",
	"required": ["path", "view_path", "limit"],
	"properties": {
		"path": {
			"type": "string",
			"title": "ファイルパス（ルートディレクトリ基準）"
		},
		"view_path": {
			"type": "string",
			"title": "View ファイルのパス（テンプレートディレクトリ基準）"
		},
		"limit": {
			"type": "integer",
			"minimum": 1,
			"title": "最大表示件数"
		}
	},
	"additionalProperties": false
}
