{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://blog.w0s.jp/post.json",
	"type": "object",
	"title": "記事投稿",
	"required": ["view", "validator", "process_message", "feed_create", "social", "media_upload"],
	"properties": {
		"view": {
			"type": "object",
			"title": "view ファイル名",
			"required": ["init"],
			"properties": {
				"init": {
					"type": "string",
					"title": "初期画面"
				}
			},
			"additionalProperties": false
		},
		"validator": {
			"type": "object",
			"title": "バリデーター",
			"required": ["title"],
			"properties": {
				"title": {
					"type": "object",
					"title": "記事タイトル",
					"required": ["message"],
					"properties": {
						"message": {
							"type": "object",
							"title": "カテゴリー",
							"required": ["unique_constraint"],
							"properties": {
								"unique_constraint": {
									"type": "string"
								}
							}
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"process_message": {
			"type": "object",
			"title": "処理ごとのメッセージ",
			"required": ["insert", "update", "db_modified", "feed", "sitemap", "newly_json", "mastodon"],
			"properties": {
				"insert": {
					"type": "object",
					"title": "記事投稿",
					"required": ["success"],
					"properties": {
						"success": {
							"type": "string",
							"title": "成功時"
						}
					},
					"additionalProperties": false
				},
				"update": {
					"type": "object",
					"title": "記事更新",
					"required": ["success"],
					"properties": {
						"success": {
							"type": "string",
							"title": "成功時"
						}
					},
					"additionalProperties": false
				},
				"db_modified": {
					"type": "object",
					"title": "最終更新日時記録",
					"required": ["success", "failure"],
					"properties": {
						"success": {
							"type": "string",
							"title": "成功時"
						},
						"failure": {
							"type": "string",
							"title": "失敗時"
						}
					},
					"additionalProperties": false
				},
				"feed": {
					"type": "object",
					"title": "Feed ファイル生成",
					"required": ["none", "success", "failure"],
					"properties": {
						"none": {
							"type": "string",
							"title": "生成不要時"
						},
						"success": {
							"type": "string",
							"title": "成功時"
						},
						"failure": {
							"type": "string",
							"title": "失敗時"
						}
					},
					"additionalProperties": false
				},
				"sitemap": {
					"type": "object",
					"title": "サイトマップファイル生成",
					"required": ["success", "failure"],
					"properties": {
						"success": {
							"type": "string",
							"title": "成功時"
						},
						"failure": {
							"type": "string",
							"title": "失敗時"
						}
					},
					"additionalProperties": false
				},
				"newly_json": {
					"type": "object",
					"title": "API のレスポンス",
					"required": ["success", "failure"],
					"properties": {
						"success": {
							"type": "string",
							"title": "成功時のメッセージ"
						},
						"failure": {
							"type": "string",
							"title": "失敗時のメッセージ"
						}
					},
					"additionalProperties": false
				},
				"mastodon": {
					"type": "object",
					"title": "Mastodon",
					"required": ["success", "failure"],
					"properties": {
						"success": {
							"type": "string",
							"title": "成功時"
						},
						"failure": {
							"type": "string",
							"title": "失敗時"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"feed_create": {
			"type": "object",
			"title": "Feed ファイル生成",
			"required": ["path", "view_path", "maximum_number"],
			"properties": {
				"path": {
					"type": "string",
					"title": "ファイルパス"
				},
				"view_path": {
					"type": "string",
					"title": "View ファイルのパス"
				},
				"maximum_number": {
					"type": "integer",
					"minimum": 1,
					"title": "最大表示件数"
				}
			},
			"additionalProperties": false
		},
		"social": {
			"type": "object",
			"title": "ソーシャルサービス投稿",
			"required": ["mastodon"],
			"properties": {
				"mastodon": {
					"type": "object",
					"title": "Mastodon",
					"required": ["api", "visibility", "message_prefix", "url_prefix"],
					"properties": {
						"api": {
							"type": "object",
							"title": "API 情報",
							"required": ["instance_origin", "access_token"],
							"properties": {
								"instance_origin": {
									"type": "string",
									"title": "インスタンスのオリジン"
								},
								"access_token": {
									"type": "string",
									"title": "アクセストークン"
								}
							},
							"additionalProperties": false
						},
						"visibility": {
							"type": "string",
							"title": "トゥートの可視性",
							"enum": ["public", "unlisted", "private", "direct"],
							"description": "https://docs.joinmastodon.org/entities/Status/#visibility"
						},
						"message_prefix": {
							"type": "string",
							"title": "トゥート本文の冒頭テキスト"
						},
						"url_prefix": {
							"type": "string",
							"title": "記事 URL の冒頭"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"media_upload": {
			"type": "object",
			"title": "メディアファイルアップロード",
			"required": ["url", "url_dev", "api_response"],
			"properties": {
				"url": {
					"type": "string",
					"title": "URL (本番)"
				},
				"url_dev": {
					"type": "string",
					"title": "URL (local)"
				},
				"api_response": {
					"type": "object",
					"title": "API のレスポンス",
					"required": ["success", "type", "overwrite", "size", "other_message_failure"],
					"properties": {
						"success": {
							"type": "object",
							"title": "成功",
							"required": ["code", "message"],
							"properties": {
								"code": {
									"type": "integer",
									"minimum": 1,
									"title": "コード"
								},
								"message": {
									"type": "string",
									"title": "メッセージ"
								}
							},
							"additionalProperties": false
						},
						"type": {
							"type": "object",
							"title": "MIME エラー",
							"required": ["code", "message"],
							"properties": {
								"code": {
									"type": "integer",
									"minimum": 11,
									"title": "コード"
								},
								"message": {
									"type": "string",
									"title": "メッセージ"
								}
							},
							"additionalProperties": false
						},
						"overwrite": {
							"type": "object",
							"title": "上書きエラー",
							"required": ["code", "message"],
							"properties": {
								"code": {
									"type": "integer",
									"minimum": 11,
									"title": "コード"
								},
								"message": {
									"type": "string",
									"title": "メッセージ"
								}
							},
							"additionalProperties": false
						},
						"size": {
							"type": "object",
							"title": "サイズ超過エラー",
							"required": ["code", "message"],
							"properties": {
								"code": {
									"type": "integer",
									"minimum": 11,
									"title": "コード"
								},
								"message": {
									"type": "string",
									"title": "メッセージ"
								}
							},
							"additionalProperties": false
						},
						"other_message_failure": {
							"type": "string",
							"title": "その他の失敗時"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
