{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://blog.w0s.jp/entry.json",
	"type": "object",
	"title": "記事",
	"required": ["view", "html"],
	"properties": {
		"view": {
			"type": "object",
			"title": "view ファイル名",
			"required": ["success"],
			"properties": {
				"success": {
					"type": "string",
					"title": "正常時"
				}
			},
			"additionalProperties": false
		},
		"html": {
			"type": "object",
			"title": "HTML ファイル生成",
			"required": ["directory", "extension", "brotli_extension"],
			"properties": {
				"directory": {
					"type": "string",
					"title": "格納ディレクトリ"
				},
				"extension": {
					"type": "string",
					"title": "拡張子"
				},
				"brotli_extension": {
					"type": "string",
					"title": "Brotli 拡張子"
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
