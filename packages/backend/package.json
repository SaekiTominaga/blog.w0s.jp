{
	"name": "@blog.w0s.jp/backend",
	"private": true,
	"type": "module",
	"scripts": {
		"app": "nodemon --inspect node/dist/app.js",
		"watch": "tsc --project node/tsconfig.json -w",
		"build": "tsc --project node/tsconfig.json",
		"lint": "eslint node/src/**/*.ts node/@types/*.d.ts",
		"test": "npm run build && cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
		"config-convert": "json2ts -i configure/schema -o configure/type",
		"config-validate": "run-p _config-validate:*",
		"errorpage-lint": "markuplint errorpage/*.html",
		"_config-validate:amazon": "ajv --spec=draft7 -s configure/schema/amazon.json -d configure/amazon.json",
		"_config-validate:category": "ajv --spec=draft7 -s configure/schema/category.json -d configure/category.json",
		"_config-validate:common": "ajv --spec=draft7 -s configure/schema/common.json -d configure/common.json",
		"_config-validate:entry": "ajv --spec=draft7 -s configure/schema/entry.json -d configure/entry.json",
		"_config-validate:list": "ajv --spec=draft7 -s configure/schema/list.json -d configure/list.json",
		"_config-validate:paapi": "ajv --spec=draft7 -s configure/schema/paapi.json -d configure/paapi.json",
		"_config-validate:post": "ajv --spec=draft7 -s configure/schema/post.json -d configure/post.json",
		"_config-validate:twitter": "ajv --spec=draft7 -s configure/schema/twitter.json -d configure/twitter.json"
	},
	"dependencies": {
		"@blog.w0s.jp/util": "*",
		"@log4js-node/smtp": "^2.0.8",
		"@saekitominaga/isbn-verify": "^2.0.1",
		"@saekitominaga/paapi-item-image-url-parser": "^2.2.4",
		"@saekitominaga/string-escape-html": "^2.0.1",
		"amazon-paapi": "^1.0.7",
		"basic-auth": "^2.0.1",
		"compression": "^1.7.4",
		"dayjs": "^1.11.7",
		"ejs": "^3.1.9",
		"express": "^4.18.2",
		"express-validator": "^7.0.1",
		"file-type": "^18.4.0",
		"filenamify": "^6.0.0",
		"github-slugger": "^2.0.0",
		"highlight.js": "^11.8.0",
		"htpasswd-js": "^1.0.2",
		"jsdom": "^22.1.0",
		"kill-port": "^2.0.1",
		"log4js": "^6.9.1",
		"md5": "^2.3.0",
		"mdast-util-to-string": "^3.2.0",
		"multer": "^1.4.4",
		"nodemailer": "^6.9.3",
		"paapi5-typescript-sdk": "^0.2.0",
		"prettier": "^2.8.8",
		"rehype-stringify": "^9.0.3",
		"remark-parse": "^10.0.2",
		"remark-rehype": "^10.1.0",
		"sqlite": "^4.2.1",
		"sqlite3": "^5.1.6",
		"twitter-api-v2": "^1.12.10",
		"twitter-text": "^3.1.0",
		"unified": "^10.1.2",
		"unist-util-visit": "^4.1.2",
		"w3c-xmlserializer": "^4.0.0",
		"xml-formatter": "^2.6.1"
	},
	"devDependencies": {
		"@types/basic-auth": "^1.1.3",
		"@types/compression": "^1.7.2",
		"@types/ejs": "^3.1.2",
		"@types/express": "^4.17.17",
		"@types/jsdom": "^21.1.1",
		"@types/md5": "^2.3.2",
		"@types/multer": "^1.4.7",
		"@types/nodemailer": "^6.4.8",
		"@types/twitter-text": "^3.1.5",
		"@types/w3c-xmlserializer": "^2.0.2"
	}
}
