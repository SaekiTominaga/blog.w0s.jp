{
	"extends": [
		"./node_modules/@w0s/markuplint-config/.markuplintrc"
	],
	"parser": {
		".ejs$": "@markuplint/ejs-parser"
	},
	"rules": {
		"character-reference": true,
		"disallowed-element": [
			"base",
			"style",
			"h3",
			"h4",
			"h5",
			"h6",
			"hgroup",
			"hr",
			"s",
			"i",
			"u",
			"br",
			"wbr",
			"embed",
			"area",
			"noscript"
		],
		"required-h1": false,
		"class-naming": [
			"/^[lcpu]-([a-z][a-z0-9]*)(-[a-z0-9]+)*(?:__[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:--[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*){0,2}$/",
			"/^-([a-z][a-z0-9]*)(-[a-z0-9]+)*$/",
			"/^js-([a-z][a-z0-9]*)(-[a-z0-9]+)*$/",
			"/^adsbygoogle$/"
		],
		"indentation": "tab"
	},
	"nodeRules": [
		{
			"selector": "table",
			"rules": {
				"require-accessible-name": false
			}
		},
		{
			"selector": "template time",
			"rules": {
				"invalid-attr": {
					"option": {
						"ignoreAttrNamePrefix": [
							"datetime"
						]
					}
				}
			}
		}
	]
}
