{
	"parser": {
		".ejs$": "@markuplint/ejs-parser"
	},
	"rules": {
		"attr-duplication": true,
		"character-reference": false,
		"deprecated-attr": true,
		"deprecated-element": true,
		"doctype": true,
		"id-duplication": true,
		"permitted-contents": true,
		"required-attr": true,
		"invalid-attr": true,
		"landmark-roles": true,
		"required-h1": false,
		"wai-aria": {
			"option": {
				"disallowSetImplicitRole": false
			}
		},
		"class-naming": false,
		"attr-equal-space-after": false,
		"attr-equal-space-before": false,
		"attr-spacing": false,
		"attr-value-quotes": false,
		"case-sensitive-attr-name": false,
		"case-sensitive-tag-name": false,
		"indentation": false
	},
	"nodeRules": [
		{
			"tagName": "html",
			"rules": {
				"permitted-contents": false,
				"invalid-attr": {
					"option": {
						"ignoreAttrNamePrefix": ["prefix"]
					}
				}
			}
		},
		{
			"tagName": "base",
			"rules": {
				"invalid-attr": {
					"option": {
						"ignoreAttrNamePrefix": ["target"]
					}
				}
			}
		},
		{
			"tagName": "meta",
			"rules": {
				"invalid-attr": {
					"option": {
						"ignoreAttrNamePrefix": ["content", "property"]
					}
				}
			}
		}
	]
}
