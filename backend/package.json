{
	"name": "@blog.w0s.jp/backend",
	"private": true,
	"type": "module",
	"scripts": {
		"app": "nodemon --inspect node/dist/app.js",
		"watch": "tsc --project node/tsconfig.json -w",
		"build": "tsc --project node/tsconfig.json",
		"prelint": "npm run _config-convert",
		"lint": "eslint node/src/**/*.ts node/@types/*.d.ts node/__tests__/**/*.test.js",
		"pretest": "run-s _config-convert build",
		"test": "node --test **/*.test.js --experimental-test-coverage",
		"config": "run-p _config-convert _config-validate:*",
		"errorpage-lint": "markuplint errorpage/*.html",
		"_config-convert": "json2ts -i configure/schema -o configure/type",
		"_config-validate:category": "ajv --spec=draft7 -s configure/schema/category.json -d configure/category.json",
		"_config-validate:common": "ajv --spec=draft7 -s configure/schema/common.json -d configure/common.json",
		"_config-validate:entry": "ajv --spec=draft7 -s configure/schema/entry.json -d configure/entry.json",
		"_config-validate:list": "ajv --spec=draft7 -s configure/schema/list.json -d configure/list.json",
		"_config-validate:post": "ajv --spec=draft7 -s configure/schema/post.json -d configure/post.json",
		"_config-validate:feed": "ajv --spec=draft7 -s configure/schema/feed.json -d configure/feed.json",
		"_config-validate:mastodon": "ajv --spec=draft7 -s configure/schema/mastodon.json -d configure/mastodon.json",
		"_config-validate:misskey": "ajv --spec=draft7 -s configure/schema/misskey.json -d configure/misskey.json",
		"_config-validate:newly-json": "ajv --spec=draft7 -s configure/schema/newly-json.json -d configure/newly-json.json",
		"_config-validate:sitemap": "ajv --spec=draft7 -s configure/schema/sitemap.json -d configure/sitemap.json"
	},
