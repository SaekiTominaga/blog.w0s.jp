{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schema.w0s.jp/Blog.json",
	"type": "object",
	"title": "記事",
	"required": ["view","sidebar"],
	"properties": {
		"view": {
			"type": "object",
			"title": "view ファイル名",
			"required": ["success"],
			"properties": {
				"success": {
					"type": "string",
					"title": "正常時"
				}
			},
			"additionalProperties": false
		},
		"sidebar": {
			"type": "object",
			"title": "サイドバー",
			"required": ["newly"],
			"properties": {
				"newly": {
					"type": "object",
					"title": "新着記事",
					"required": ["maximum_number"],
					"properties": {
						"maximum_number": {
							"type": "integer",
							"minimum": 1,
							"title": "最大表示件数"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
