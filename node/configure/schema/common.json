{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://blog.w0s.jp/common.json",
	"type": "object",
	"title": "富永日記帳",
	"required": ["port", "response", "static", "cors", "views", "temp", "errorpage", "logger", "sqlite"],
	"properties": {
		"port": {
			"type": "integer",
			"minimum": 1,
			"maximum": 65535,
			"title": "HTTP サーバーのポート番号"
		},
		"response": {
			"type": "object",
			"title": "レスポンス",
			"required": ["header", "compression"],
			"properties": {
				"header": {
					"type": "object",
					"title": "レスポンスヘッダー",
					"required": ["hsts", "csp", "csp_html", "cspro_html"],
					"properties": {
						"hsts": {
							"type": "string",
							"title": "Strict-Transport-Security"
						},
						"csp": {
							"type": "string",
							"title": "Content-Security-Policy (HTML 以外)"
						},
						"csp_html": {
							"type": "string",
							"title": "Content-Security-Policy (HTML)"
						},
						"cspro_html": {
							"type": "string",
							"title": "Content-Security-Policy-Report-Only (HTML)"
						}
					},
					"additionalProperties": false
				},
				"compression": {
					"type": "object",
					"title": "圧縮",
					"required": ["threshold"],
					"properties": {
						"threshold": {
							"type": "string",
							"title": "Threshold"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"static": {
			"type": "object",
			"title": "静的ファイル",
			"required": ["root", "headers"],
			"properties": {
				"root": {
					"type": "string",
					"title": "ルートディレクトリ"
				},
				"extensions": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"title": "ファイル拡張子のフォールバック（拡張子に . は付けない）"
				},
				"indexes": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"title": "ディレクトリのインデックスファイル名"
				},
				"headers": {
					"type": "object",
					"title": "レスポンスヘッダー関連",
					"required": ["mime"],
					"properties": {
						"mime": {
							"type": "object",
							"required": ["path", "extension"],
							"title": "MIME 定義",
							"properties": {
								"path": {
									"type": "object",
									"title": "MIME とファイルパスの紐付け",
									"additionalProperties": {
										"type": "array",
										"items": {
											"type": "string"
										},
										"title": "ファイルパス"
									}
								},
								"extension": {
									"type": "object",
									"title": "MIME と拡張子の紐付け",
									"additionalProperties": {
										"type": "array",
										"items": {
											"type": "string"
										},
										"title": "拡張子（ドットなし）"
									}
								}
							},
							"additionalProperties": false
						},
						"cache_control": {
							"type": "object",
							"required": ["default", "path", "extension"],
							"title": "キャッシュ定義",
							"properties": {
								"default": {
									"type": "string",
									"title": "デフォルト値"
								},
								"path": {
									"type": "array",
									"items": {
										"type": "object",
										"required": ["paths", "value"],
										"properties": {
											"paths": {
												"type": "array",
												"items": {
													"type": "string"
												},
												"title": "拡張子"
											},
											"value": {
												"type": "string",
												"title": "値"
											}
										},
										"additionalProperties": false
									},
									"title": "ファイルパスによるキャッシュ定義"
								},
								"extension": {
									"type": "array",
									"items": {
										"type": "object",
										"required": ["extensions", "value"],
										"properties": {
											"extensions": {
												"type": "array",
												"items": {
													"type": "string"
												},
												"title": "拡張子"
											},
											"value": {
												"type": "string",
												"title": "値"
											}
										},
										"additionalProperties": false
									},
									"title": "拡張子によるキャッシュ定義"
								}
							},
							"additionalProperties": false
						},
						"source_map": {
							"type": "object",
							"title": "SourceMap 定義",
							"properties": {
								"extensions": {
									"type": "array",
									"items": {
										"type": "string"
									},
									"title": "拡張子"
								}
							},
							"additionalProperties": false
						}
					},
					"additionalProperties": false
				},
				"auth_basic": {
					"type": "array",
					"items": {
						"type": "object",
						"required": ["directory", "realm", "htpasswd"],
						"properties": {
							"directory": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"title": "directory"
							},
							"realm": {
								"type": "string",
								"title": "保護領域の説明文"
							},
							"htpasswd": {
								"type": "string",
								"title": "htpasswd ファイルのパス"
							}
						},
						"additionalProperties": false
					},
					"uniqueItems": true,
					"title": "Basic Authentication"
				}
			},
			"additionalProperties": false
		},
		"cors": {
			"type": "object",
			"title": "CORS",
			"required": ["allow_origins"],
			"properties": {
				"allow_origins": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"title": "許可するオリジン"
				}
			},
			"additionalProperties": false
		},
		"views": {
			"type": "string",
			"title": "テンプレートディレクトリ"
		},
		"temp": {
			"type": "string",
			"title": "一時ディレクトリ"
		},
		"errorpage": {
			"type": "object",
			"title": "エラーページ",
			"required": ["path_401", "path_403", "path_404", "path_500"],
			"properties": {
				"path_401": {
					"type": "string",
					"title": "Filepath for `401 Unauthorized`"
				},
				"path_403": {
					"type": "string",
					"title": "Filepath for `403 Forbidden`"
				},
				"path_404": {
					"type": "string",
					"title": "Filepath for `404 Not Found`"
				},
				"path_500": {
					"type": "string",
					"title": "Filepath for `500 Internal Server Error`"
				}
			},
			"additionalProperties": false
		},
		"logger": {
			"type": "object",
			"title": "Logger",
			"required": ["path"],
			"properties": {
				"path": {
					"type": "string",
					"title": "ファイルパス"
				}
			},
			"additionalProperties": false
		},
		"sqlite": {
			"type": "object",
			"title": "SQLite",
			"required": ["db"],
			"properties": {
				"db": {
					"type": "object",
					"title": "DB ファイルのパス（絶対パス、または `node` ディレクトリを基準にした相対パス）",
					"required": ["blog"],
					"properties": {
						"blog": {
							"type": "string",
							"title": "blog テーブル"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
