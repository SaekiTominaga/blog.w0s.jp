{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://blog.w0s.jp/feed-create.json",
	"type": "object",
	"title": "フィード作成",
	"required": ["auth", "maximum_number", "view_path"],
	"properties": {
		"auth": {
			"type": "object",
			"title": "認証",
			"required": ["realm", "htpasswd_file", "json_401"],
			"properties": {
				"realm": {
					"type": "string",
					"title": "保護領域の説明文"
				},
				"htpasswd_file": {
					"type": "string",
					"title": "htpasswd ファイルのパス"
				},
				"json_401": {
					"type": "object",
					"title": "認証失敗時に返す JSON 内容"
				}
			},
			"additionalProperties": false
		},
		"maximum_number": {
			"type": "integer",
			"minimum": 1,
			"title": "最大表示件数"
		},
		"view_path": {
			"type": "string",
			"title": "View ファイルのパス"
		}
	},
	"additionalProperties": false
}
