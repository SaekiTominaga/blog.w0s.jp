{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://blog.w0s.jp/list.json",
	"type": "object",
	"title": "記事リスト",
	"required": ["maximum_number", "amazon_image_size", "view", "html"],
	"properties": {
		"maximum_number": {
			"type": "integer",
			"minimum": 1,
			"title": "1ページあたりの最大表示件数"
		},
		"amazon_image_size": {
			"type": "integer",
			"minimum": 1,
			"title": "Amazon 商品画像のサイズ"
		},
		"view": {
			"type": "object",
			"title": "view ファイル名",
			"required": ["success"],
			"properties": {
				"success": {
					"type": "string",
					"title": "正常時"
				}
			},
			"additionalProperties": false
		},
		"html": {
			"type": "object",
			"title": "HTML ファイル生成",
			"required": ["directory", "extension", "brotli_extension"],
			"properties": {
				"directory": {
					"type": "string",
					"title": "格納ディレクトリ"
				},
				"extension": {
					"type": "string",
					"title": "拡張子"
				},
				"brotli_extension": {
					"type": "string",
					"title": "Brotli 拡張子"
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
