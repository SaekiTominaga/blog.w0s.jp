{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://blog.w0s.jp/list.json",
	"type": "object",
	"title": "記事リスト",
	"required": ["maximum_number", "image_external", "view", "html"],
	"properties": {
		"maximum_number": {
			"type": "integer",
			"minimum": 1,
			"title": "1ページあたりの最大表示件数"
		},
		"image_external": {
			"type": "object",
			"title": "外部サービスの画像",
			"required": ["amazon", "twitter"],
			"properties": {
				"amazon": {
					"type": "object",
					"title": "Amazon",
					"required": ["origin", "size"],
					"properties": {
						"origin": {
							"type": "string",
							"title": "URL origin"
						},
						"size": {
							"type": "integer",
							"minimum": 1,
							"title": "画像サイズ"
						}
					},
					"additionalProperties": false
				},
				"twitter": {
					"type": "object",
					"title": "Twitter",
					"required": ["origin", "params"],
					"properties": {
						"origin": {
							"type": "string",
							"title": "URL origin"
						},
						"params": {
							"type": "object",
							"title": "パラメーター",
							"additionalProperties": {
								"type": "string",
								"title": "パラメーターの値"
							}
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"view": {
			"type": "object",
			"title": "view ファイル名",
			"required": ["success"],
			"properties": {
				"success": {
					"type": "string",
					"title": "正常時"
				}
			},
			"additionalProperties": false
		},
		"html": {
			"type": "object",
			"title": "HTML ファイル生成",
			"required": ["directory", "extension", "brotli_extension"],
			"properties": {
				"directory": {
					"type": "string",
					"title": "格納ディレクトリ"
				},
				"extension": {
					"type": "string",
					"title": "拡張子"
				},
				"brotli_extension": {
					"type": "string",
					"title": "Brotli 拡張子"
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
