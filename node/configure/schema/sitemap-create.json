{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://blog.w0s.jp/sitemap-create.json",
	"type": "object",
	"title": "サイトマップ作成",
	"required": ["auth", "url_limit", "view_path"],
	"properties": {
		"auth": {
			"type": "object",
			"title": "認証",
			"required": ["realm", "htpasswd_file", "json_401"],
			"properties": {
				"realm": {
					"type": "string",
					"title": "保護領域の説明文"
				},
				"htpasswd_file": {
					"type": "string",
					"title": "htpasswd ファイルのパス"
				},
				"json_401": {
					"type": "object",
					"title": "認証失敗時に返す JSON 内容"
				}
			},
			"additionalProperties": false
		},
		"url_limit": {
			"type": "integer",
			"minimum": 1,
			"maximum": 50000,
			"title": "URL の最大表示件数",
			"description": "https://www.sitemaps.org/protocol.html"
		},
		"view_path": {
			"type": "string",
			"title": "View ファイルのパス"
		}
	},
	"additionalProperties": false
}
