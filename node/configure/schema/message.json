{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://blog.w0s.jp/message.json",
	"type": "object",
	"title": "記事本文",
	"required": ["anchor_host_icon"],
	"properties": {
		"anchor_host_icon": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["host", "name", "src"],
				"properties": {
					"host": {
						"type": "string",
						"title": "ホスト名"
					},
					"name": {
						"type": "string",
						"title": "サイト名"
					},
					"src": {
						"type": "string",
						"title": "アイコンパス"
					}
				},
				"additionalProperties": false
			},
			"uniqueItems": true,
			"title": "ホストのアイコン情報"
		}
	},
	"additionalProperties": false
}
