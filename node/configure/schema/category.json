{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://blog.w0s.jp/Category.json",
	"type": "object",
	"title": "カテゴリ",
	"required": ["maximum_number", "amazon_image_size", "view","sidebar"],
	"properties": {
		"maximum_number": {
			"type": "integer",
			"minimum": 1,
			"title": "1ページあたりの最大表示件数"
		},
		"amazon_image_size": {
			"type": "integer",
			"minimum": 1,
			"title": "Amazon 商品画像のサイズ"
		},
		"view": {
			"type": "object",
			"title": "view ファイル名",
			"required": ["success"],
			"properties": {
				"success": {
					"type": "string",
					"title": "正常時"
				}
			},
			"additionalProperties": false
		},
		"sidebar": {
			"type": "object",
			"title": "サイドバー",
			"required": ["newly"],
			"properties": {
				"newly": {
					"type": "object",
					"title": "新着記事",
					"required": ["maximum_number"],
					"properties": {
						"maximum_number": {
							"type": "integer",
							"minimum": 1,
							"title": "最大表示件数"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
