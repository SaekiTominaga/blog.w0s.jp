{
	"extends": "@w0s/tsconfig",
	"include": ["@types/*.d.ts", "src/**/*.ts"],
	"exclude": ["__tests__/*.test.js"],
	"compilerOptions": {
		/* Modules */
		"moduleResolution": "Node", // "Node16" だと `node_modules/highlight.js/es/core.d.ts:1:18 - error TS7016` でコンパイル不能

		/* Emit */
		"outDir": "dist",

		/* Completeness */
		"skipLibCheck": true // `node_modules/twitter-api-v2/dist/paginators/user.paginator.v1.d.ts:8:15 - error TS2416` 対策
	}
}
