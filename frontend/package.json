{
	"name": "@blog.w0s.jp/frontend",
	"private": true,
	"type": "module",
	"scripts": {
		"precss-dev": "rimraf ../public/style/*.br -g",
		"css-dev": "postcss style/*.css --base style -d ../public/style -w",
		"precss-prod": "npm run css-lint && rimraf ../public/style/* -g",
		"css-prod": "postcss style/*.css --base style -d ../public/style",
		"postcss-prod": "prettier --config ../.prettierrc.mjs -w ../public/style/*.css && brotli-cli compress -g ../public/style/*.css -m text",
		"css-lint": "stylelint style/**/*.css",
		"prejs-dev": "rimraf ../public/script/*.br -g",
		"js-dev": "rollup -c -w --environment build:development",
		"prejs-prod": "tsc --project script --noEmit && npm run js-lint && rimraf ../public/script/* -g",
		"js-prod": "rollup -c --environment build:production",
		"postjs-prod": "brotli-cli compress -g ../public/script/*.{js,mjs} -m text",
		"js-lint": "eslint script/**/*.ts",
		"presvg": "rimraf ../public/image/**/*.svg ../public/image/**/*.svg.br ../public/favicon.ico ../public/favicon.ico.br -g",
		"svg": "node --experimental-strip-types build/svg.ts -i image -o ../public -c svgo.config.js",
		"postsvg": "brotli-cli compress -g ../public/image/**/*.svg -g ../public/favicon.ico -m text",
		"node-lint": "eslint build/*.ts"
	},
	"dependencies": {
		"@w0s/button-clipboard": "^3.0.1",
		"@w0s/footnote-reference-popover": "^7.2.0",
		"@w0s/form-before-unload-confirm": "^3.0.1",
		"@w0s/form-submit-overlay": "^4.0.2",
		"@w0s/input-file-preview": "^3.0.3",
		"@w0s/paapi-item-image-url-parser": "^3.2.3",
		"@w0s/report-js-error": "^3.0.1",
		"@w0s/report-same-referrer": "^4.0.1",
		"@w0s/string-convert": "^3.0.2",
		"@w0s/tab": "^4.4.1",
		"prettier": "^3.5.3",
		"slash": "^5.1.0",
		"svgo": "^4.0.0"
	},
	"devDependencies": {
		"@csstools/postcss-global-data": "^3.0.0",
		"@rollup/plugin-commonjs": "^28.0.7",
		"@rollup/plugin-node-resolve": "^16.0.2",
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/node": "^22.18.10",
		"@types/trusted-types": "^2.0.7",
		"brotli-cli": "^2.1.0",
		"cssnano": "^7.0.6",
		"cssnano-preset-lite": "^4.0.3",
		"postcss": "^8.5.1",
		"postcss-cli": "^11.0.0",
		"postcss-custom-media": "^11.0.5",
		"postcss-import": "^16.1.0",
		"postcss-nesting": "^13.0.1",
		"rollup": "^4.52.4",
		"vfile-message": "^4.0.3"
	}
}
