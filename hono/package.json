{
	"name": "hono",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "tsx --watch --tsconfig tsconfig.json src/app.ts",
		"prebuild": "rimraf dist/* -g",
		"build": "tsc",
		"lint": "eslint @types/*.d.ts src/**/*.ts",
		"pretest": "tsc --noEmit && pnpm -F frontend build && pnpm -F remark build",
		"test": "node --experimental-test-coverage --env-file=../.env.test --test src/app.test.ts src/{controller,util}/**/*.test.ts",
		"test:process": "node --experimental-test-coverage --env-file=../.env.development --test src/process/**/*.test.ts"
	},
	"dependencies": {
		"@atproto/api": "0.18.18",
		"@hono/node-server": "1.19.9",
		"@log4js-node/smtp": "2.0.8",
		"@w0s/env-value-type": "1.0.1",
		"@w0s/html-escape": "4.0.2",
		"@w0s/paapi-item-image-url-parser": "3.2.3",
		"@w0s/sqlite-utility": "2.0.0",
		"better-sqlite3": "12.6.2",
		"dayjs": "1.11.19",
		"ejs": "4.0.1",
		"filenamify": "7.0.1",
		"hono": "4.11.4",
		"kysely": "0.28.10",
		"log4js": "6.9.1",
		"masto": "7.10.1"
	},
	"devDependencies": {
		"@types/better-sqlite3": "7.6.13",
		"@types/ejs": "3.1.5",
		"@types/md5": "2.3.6",
		"tsx": "4.21.0"
	},
	"packageManager": "pnpm@10.28.1"
}
